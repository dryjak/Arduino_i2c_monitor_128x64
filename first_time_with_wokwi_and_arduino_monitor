//arduino with monitor on wikwi//
//using://
//https://github.com/olikraus/u8g2/wiki/u8g2reference//

#include <Arduino.h>
#include <U8g2lib.h>
#include <Wire.h>

U8G2_SSD1306_128X64_NONAME_1_HW_I2C u8g2(U8G2_R0); // set the OLED display to 128x64px, HW IIC, no rotation, used in WOKWI

void setup() {
  // put your setup code here, to run once:
  u8g2.begin();
  u8g2.setContrast(1);

}

int center_x = 64;
int center_y = 32;

void draw_background()
{
  for ( int i = 0; i < 60; i++)
  {
    u8g2.setDrawColor(1);  //set color to white
   
    float x_pos = round(center_x + sin( radians(i * 6) ) * 30);
    float y_pos = round(center_y - cos( radians(i * 6) ) * 30);
    u8g2.drawPixel(x_pos, y_pos); //draw single pixel in the midle of the display
  }
}


void loop() {
  // put your main code here, to run repeatedly:
  u8g2.firstPage();
  do{
    
    draw_background();

  }while( u8g2.nextPage() );
}
